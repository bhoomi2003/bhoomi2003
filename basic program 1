// c program to check number is even or odd
#include<stdio.h>
int main()
{
  int num;
    printf("enter the number");
    scanf("%d", &num);
      if(num%2==0)
       printf("number %d is even", num);
else
  printf("number %d is odd", num);
  return 0;
}
    
    output
    cc main.c
    ./a.out
    enter the number 9
    number 9 is odd
    
    ./a.out
    enter the number 6
    number 6 is even 
    
    
